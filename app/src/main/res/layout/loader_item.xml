<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">

    <ProgressBar
        android:id="@+id/launchLoaderBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:indeterminate="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/launchErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/launchLoaderBar"
        app:layout_constraintStart_toStartOf="@+id/launchLoaderBar"
        app:layout_constraintTop_toBottomOf="@+id/launchLoaderBar"
        tools:text="No Internet Connection" />

    <Button
        android:id="@+id/launchRetryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Retry"
        app:layout_constraintEnd_toEndOf="@+id/launchErrorMessage"
        app:layout_constraintStart_toStartOf="@+id/launchErrorMessage"
        app:layout_constraintTop_toBottomOf="@+id/launchErrorMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>